<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Object</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr id="<%= email.id %>">
        <td><%= email.object %></td>
        <td><%= email.body %></td>
        <td><%= link_to 'Show', email , remote: true%></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td class="destroy">Destroy</td>
      </tr>
    <% end %>
  </tbody>

  <div id="email-body">
  </div>

</table>

<br>

<%= link_to 'New Email', new_email_path %>
